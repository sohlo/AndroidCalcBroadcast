<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip">

    <TextView
        android:id="@+id/calcOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:text="4+2+3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="33%" />

    <TextView
        android:id="@+id/calcResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/calcOperation"
        android:layout_toEndOf="@id/calcOperation"
        android:paddingLeft="10dp"
        android:text="21321"
        android:textAppearance="?android:attr/textAppearanceLarge"

        app:layout_heightPercent="5%"
        app:layout_widthPercent="34%" />

    <TextView
        android:id="@+id/calcTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/calcOperation"
        android:layout_toEndOf="@+id/calcResult"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:singleLine="true"
        android:text="TextVisew"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="33%" />


</android.support.percent.PercentRelativeLayout>